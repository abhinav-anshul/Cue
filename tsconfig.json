{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
